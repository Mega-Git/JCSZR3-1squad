@model CurrencyListModel

@{
    ViewData["Title"] = "Home Page";
}

@{var index = 0;}

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th class="sticky-top">
                    <a>#</a>
                </th>
                <th class="sticky-top">
                    @*<a asp-action="Index" asp-route-sortOrder="@ViewData["NameSort"]">Name</a>*@
                    <a asp-action="Index" asp-route-sortOrder="@Model.NameSort">Name</a>
                </th>
                <th class="sticky-top">
                    @*<a asp-action="Index" asp-route-sortOrder="@ViewData["PriceSort"]">Price</a>*@
                    <a asp-action="Index" asp-route-sortOrder="@Model.PriceSort">Price</a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CurrencyList)
            {
                <tr>
                    <td><span style='font-size:25px;'>&#9734;</span> @(++index)</td>
                    <td>@item.Currency</td>
                    <td>@item.Prices.Last()</td>
                </tr>
            }
        </tbody>
    </table>

</div>